@using DisplayMovies.Models
@helper MovieListToTableFor(List<Movie> list)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Run Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Movie m in list)
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.Year</td>
                    <td>@m.Director</td>
                    <td>@m.RunTime</td>
                </tr>
            }
        </tbody>
    </table>
}
