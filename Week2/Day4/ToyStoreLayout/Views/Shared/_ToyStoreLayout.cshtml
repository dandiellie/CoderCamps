<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Red Balloon Toy Store</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://bootswatch.com/lumen/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <img alt="The Red Balloon Toy Store" src="http://www.redballoontoystore.com/skin/frontend/base/default/images/logo1.jpg" class="img-rounded" height="150" width="150"/>
            </div>
            <div class="col-md-10">
                <div class="page-header">
                    <h1>
                        @Html.Partial("_Header")
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="jumbotron">
                    <h1>Welcome to Red Balloon</h1>
                    <p>@RenderBody()</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h2 class="panel-title">Featured Toys</h2>
                    </div>
                    <div class="panel-body">
                        @RenderSection("FeaturedToys")
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @RenderSection("Footer", false)
                <p>
                    &copy; @DateTime.Now.Year - The Red Ballon
                </p>
            </div>
        </div>
    </div>
</body>
</html>